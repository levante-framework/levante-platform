{
  "functions": [
    {
      "source": "functions/levante-admin",
      "codebase": "levante-admin",
     "ignore": [
        "node_modules",
        "firestore-debug.log",
        "firebase-debug.log",
        ".git"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "firestore": {
    "rules": "functions/levante-admin/firestore.rules"
  },
  "emulators": {
    "auth": {
      "port": 9199
    },
    "functions": {
      "port": 5002,
      "cors": {
        "origin": ["https://localhost:5173", "http://localhost:5173"],
        "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
        "allowedHeaders": ["Content-Type", "Authorization"],
        "credentials": true
      }
    },
    "firestore": {
      "port": 8180
    },
    "hub": {
      "port": 4401
    },
    "tasks": {
      "port": 9899
    },
    "ui": {
      "enabled": true,
      "port": 4001
    },
    "logging": {
      "port": 4501
    },
    "singleProjectMode": true
  }
}
