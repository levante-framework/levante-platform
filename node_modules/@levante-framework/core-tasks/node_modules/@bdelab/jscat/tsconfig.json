{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ],
  "typedocOptions": {
    "entryPoints": [
      "src"
    ],
    "entryPointStrategy": "expand",
    "exclude": [
      "**/*+(spec|test).+(ts|js)",
      "**/__tests__/**/*.+(ts|js)"
    ],
    "out": "docs",
    "includeVersion": true,
    "readme": "README.md"
  }
}