{
  "name": "levante-firebase-functions",
  "version": "1.1.0",
  "description": "Firebase functions for the LEVANTE platform",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:admin && npm run build:assessment",
    "build:admin": "tsc -p functions/levante-admin/tsconfig.json",
    "build:assessment": "tsc -p functions/levante-assessment/tsconfig.json",
    "prepare": "husky install || true",
    "test": "firebase emulators:exec \"npx vitest run\"",
    "predeploy:levante-admin": "npm run build:admin",
    "predeploy:levante-assessment": "npm run build:assessment",
    "deploy:levante-admin": "firebase deploy --only functions --prefix ./functions/levante-admin/firebase.json",
    "deploy:levante-assessment": "firebase deploy --only functions --prefix ./functions/levante-assessment/firebase.json",
    "dev": "EMULATOR=TRUE firebase emulators:start --import=./emulator_data --export-on-exit=./emulator_data",
    "emulator:seed": "node emulator_scripts/seed-emulator.js",
    "emulator:clear": "node emulator_scripts/clear-emulator.js",
    "emulator:export": "firebase emulators:export ./emulator_data --force",
    "emulator:reset": "npm run emulator:clear && npm run emulator:seed"
  },
  "engines": {
    "node": "20"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/levante-framework/levante-firebase-functions.git"
  },
  "authors": [
    {
      "name": "Philip Ziolkowski"
    },
    {
      "name": "David Cardinal"
    },
    {
      "name": "Adam Richie-Halford",
      "email": "richiehalford@gmail.com",
      "url": "https://richiehalford.org/"
    }
  ],
  "license": "Stanford Academic Software License for LEVANTE",
  "bugs": {
    "url": "https://github.com/levante-framework/lev  ante-firebase-functions/issues"
  },
  "homepage": "https://github.com/levante-framework/levante-firebase-functions#readme",
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "dependencies": {
    "@bdelab/roar-utils": "^1.1.0",
    "@firebase/logger": "^0.4.4",
    "@google-cloud/secret-manager": "^4.2.2",
    "@types/cors": "^2.8.19",
    "axios": "^1.4.0",
    "axios-oauth-1.0a": "^0.3.6",
    "bcrypt": "^6.0.0",
    "boolean": "^3.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.3.2",
    "firebase-tools": "^14.5.0",
    "lodash": "^4.17.21",
    "status-code-enum": "^1.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^5.0.0",
    "@types/bcrypt": "^6.0.0",
    "@types/node": "^22.7.9",
    "@vitest/coverage-v8": "^3.2.4",
    "firebase-functions-test": "^0.2.0",
    "firebase-tools-with-isolate": "^13.11.2",
    "prettier": "3.3.2",
    "puppeteer": "^24.8.0",
    "typescript": "^4.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "vitest": "^3.2.4"
  },
  "private": true,
  "fireConfig": {}
}
