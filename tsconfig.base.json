{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["DOM", "ES2020"],
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/client/levante-dashboard/src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "strict": true,
    "noEmit": true,
    "sourceMap": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", "dist", "lib", ".turbo"]
}
