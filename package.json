{
  "name": "levante-platform",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:db": "turbo run dev:db",
    "test": "turbo run test --filter=./apps/client/levante-dashboard",
    "build": "turbo run build",
    "build:dev": "turbo run build:dev --filter=./apps/client/levante-dashboard",
    "emulator:seed": "turbo run emulator:seed",
    "emulator:clear": "turbo run emulator:clear",
    "emulator:export": "turbo run emulator:export",
    "emulator:reset": "turbo run emulator:reset",
    "cypress:open": "cd apps/client/levante-dashboard && npm run cypress:open",
    "cypress:run": "cd apps/client/levante-dashboard && npm run cypress:run",
    "cypress:dev": "concurrently \"npm run dev\" \"npm run cypress:open\"",
    "prepare": "husky install || true",
    "clean:main": "rm -rf node_modules .turbo package-lock.json",
    "clean:dashboard": "cd apps/client/levante-dashboard && rm -rf node_modules .turbo dist",
    "clean:functions": "cd apps/server/levante-firebase-functions && rm -rf node_modules .turbo dist emulator_data",
    "clean:admin-workspace": "cd apps/server/levante-firebase-functions/functions/levante-admin && rm -rf node_modules .turbo lib",
    "clean:all": "npm run clean:main && npm run clean:dashboard && npm run clean:functions && npm run clean:admin-workspace",
    "clean:ports": "node scripts/clean-ports.js",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix"
  },
  "workspaces": [
    "apps/*/*"
  ],
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "optimization-js": "^1.5.0",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "npm@10.5.2",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
