{
  "name": "levante-platform",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "dev": "turbo run dev",
    "dev:db": "turbo run dev:db",
    "test": "turbo run test --filter=levante-dashboard",
    "build:firebase": "turbo run build:firebase",
    "build:dev": "turbo run build:dev --filter=levante-dashboard",
    "emulator:seed": "turbo run emulator:seed",
    "emulator:clear": "turbo run emulator:clear",
    "emulator:export": "turbo run emulator:export",
    "emulator:reset": "turbo run emulator:reset",
    "cypress:open": "cd apps/levante-dashboard && npm run cy",
    "cypress:run": "cd apps/levante-dashboard && npm run cy:run",
    "cypress:dev": "concurrently \"npm run dev\" \"npm run cypress:open\"",
    "prepare": "husky install || true",
    "clean:main": "rm -rf node_modules .turbo package-lock.json",
    "clean:dashboard": "cd apps/levante-dashboard && rm -rf node_modules .turbo dist",
    "clean:functions": "cd apps/levante-firebase-functions && rm -rf node_modules .turbo dist emulator_data",
    "clean:admin-workspace": "cd apps/levante-firebase-functions/functions/levante-admin && rm -rf node_modules .turbo lib",
    "clean:assessment-workspace": "cd apps/levante-firebase-functions/functions/levante-assessment && rm -rf node_modules .turbo lib",
    "clean:all": "npm run clean:main && npm run clean:dashboard && npm run clean:functions && npm run clean:admin-workspace && npm run clean:assessment-workspace",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix"
  },
  "workspaces": [
    "apps/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vue/eslint-config-standard": "^8.0.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-vue": "^9.19.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6",
    "turbo": "^2.5.6",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": "20.x"
  },
  "packageManager": "npm@10.5.2",
  "lint-staged": {
    "*.{ts,tsx,js,jsx,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
